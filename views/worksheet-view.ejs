<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Worksheet <%= worksheet?.metadata?.id || worksheet?.id || "-" %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body class="bg-gray-50 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between items-center">
    <h1 class="text-xl font-bold text-indigo-600">Worksheet Detalhes</h1>
    <div class="flex items-center gap-4">
      <a href="/worksheets" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition">
        ← Voltar à lista
      </a>
      <form action="/logout" method="POST">
        <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
          Logout
        </button>
      </form>
    </div>
  </nav>

  <!-- Conteúdo -->
  <main class="max-w-5xl mx-auto p-6 space-y-8">

    <!-- Cabeçalho -->
    <section class="bg-white p-6 rounded-2xl shadow">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">
        Folha: <%= worksheet?.metadata?.id || worksheet?.id || "-" %>
      </h2>
      <p class="text-gray-600">
        Operação: <%= worksheet?.operacao || "-" %>
      </p>
      <p class="text-gray-600">
        Descrição: <%= worksheet?.descricao || "-" %>
      </p>
    </section>

    <!-- Metadata -->
    <section class="bg-white p-6 rounded-2xl shadow">
      <h3 class="text-xl font-semibold text-gray-700 mb-3">Metadados</h3>
      <ul class="space-y-1 text-gray-600">
        <li><strong>AIGP:</strong> <%= (worksheet?.metadata?.aigp || []).join(", ") || "-" %></li>
        <li><strong>POSA:</strong> <%= worksheet?.metadata?.posa_code || "-" %></li>
        <li><strong>POSP:</strong> <%= worksheet?.metadata?.posp_code || "-" %></li>
        <li><strong>Data Emissão:</strong> <%= worksheet?.metadata?.issue_date || "-" %></li>
        <li><strong>Início:</strong> <%= worksheet?.metadata?.starting_date || "-" %></li>
        <li><strong>Fim:</strong> <%= worksheet?.metadata?.finishing_date || "-" %></li>
      </ul>
    </section>

    <!-- Features -->
    <section class="bg-white p-6 rounded-2xl shadow">
      <h3 class="text-xl font-semibold text-gray-700 mb-3">Features</h3>
      <% if (features && features.length > 0) { %>
        <ul class="divide-y">
          <% features.forEach((f, idx) => { %>
            <li class="py-3">
              <p class="font-medium text-gray-800">Feature <%= idx %></p>
              <p class="text-sm text-gray-600">Tipo: <%= f?.type || "-" %></p>
              <p class="text-sm text-gray-600">Geometry: <%= f?.geometryType ? `${f.geometryType} - ${JSON.stringify(f.coordinates)}` : "-" %></p>
              <div class="text-sm text-gray-700 space-y-1"><% Object.entries(f?.properties || {}).forEach(([key, value]) => { %><p><strong><%= key %>:</strong> <%= value %></p><% }) %></div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-gray-500">Nenhuma feature encontrada.</p>
      <% } %>
    </section>

    <div id="map" style="height: 500px;"></div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const geojsonData = <%- JSON.stringify(geojson) %>;

        // 1. Inicializar o mapa
        const map = L.map('map').setView([38.7, -9.3], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // 2. Recolher todos os pontos das features
        const allPoints = [];

        geojsonData.features.forEach(feature => {
          const { geometry } = feature;
          if (!geometry || !geometry.coordinates) return;

          if (geometry.type === "Polygon") {
            const coords = geometry.coordinates[0]; // primeiro anel
            coords.forEach(([lng, lat]) => {
              allPoints.push([lat, lng]); // Leaflet usa [lat, lng]
            });
          }

          if (geometry.type === "Point") {
            const [lng, lat] = geometry.coordinates;
            allPoints.push([lat, lng]);
          }
        });

        // 3. Desenhar o polígono que liga todos os pontos
        if (allPoints.length > 2) {
          const unionPolygon = L.polygon(allPoints, {
            color: 'red',
            fillOpacity: 0.2
          }).addTo(map);

          unionPolygon.bindPopup("Área total das features");
          map.fitBounds(unionPolygon.getBounds());
        }

        
        /*geojsonData.features.forEach(feature => {
          const { geometry, properties } = feature;
          if (!geometry || !geometry.coordinates) return;

          if (geometry.type === "Polygon") {
            const coords = geometry.coordinates[0].map(([lng, lat]) => [lat, lng]);
            L.polygon(coords, { color: 'blue' }).addTo(map)
              .bindPopup(properties?.name || "Polígono");
          }

          if (geometry.type === "Point") {
            const [lng, lat] = geometry.coordinates;
            L.marker([lat, lng]).addTo(map)
              .bindPopup(properties?.name || "Ponto");
          }
        });*/
      });
    </script>


  </main>
</body>
</html>
